{
  "type": "module",
  "name": "quest-maker",
  "scripts": {
    "ts-node": "TS_NODE_TRANSPILE_ONLY=1 node --experimental-json-modules --loader ts-node/esm",
    "build": "bash build.sh",
    "watch-build": "chokidar --initial src -c 'yarn build'",
    "watch": "concurrently --kill-others --names Build,Static --prefix name \"yarn watch-build\" \"yarn run-static-server\"",
    "run-static-server": "http-server -p 1234 dist -c-1 > /dev/null",
    "deploy": "bash deploy/deploy.sh"
  },
  "dependencies": {
    "glob": "^7.1.6",
    "pixi-plugin-bump": "^1.1.8",
    "pixi.js": "^5.3.3",
    "preact": "^10.5.13",
    "redux-zero": "^5.1.7",
    "timidity": "^1.3.0"
  },
  "devDependencies": {
    "@chialab/esbuild-plugin-html": "0.12.2",
    "@types/glob": "^7.1.3",
    "@types/node": "*",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^7.0.0",
    "esbuild": "^0.14.23",
    "esbuild-node-builtins": "^0.1.0",
    "freepats": "^1.0.2",
    "http-server": "^14.1.0",
    "puppeteer": "^13.3.2",
    "ts-node": "^10.5.0",
    "typescript": "^4.6.2"
  }
}
